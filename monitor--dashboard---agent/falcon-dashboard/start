sudo docker run --name falcon-dashboard-self -d \
    -p 8082:8081 \
    -e API_ADDR=http://falcon-api.yyyy.com:8080/api/v1 \
    -e PORTAL_DB_HOST=www.yyyy.com \
    -e PORTAL_DB_PORT=66666 \
    -e PORTAL_DB_USER=falcon \
    -e PORTAL_DB_PASS=daiyi \
    -e PORTAL_DB_NAME=yyyy \
    -e ALARM_DB_HOST=www.yyyy.com \
    -e ALARM_DB_PORT=66666 \
    -e ALARM_DB_USER=falcon \
    -e ALARM_DB_PASS=daiyi \
    -e ALARM_DB_NAME=alarms \
    -w /open-falcon/dashboard \
    falcon-dashboard:local \
    './control startfg'
